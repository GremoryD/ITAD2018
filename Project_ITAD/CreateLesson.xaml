<Window x:Class="Project_ITAD.CreateLesson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_ITAD"
        mc:Ignorable="d"
        Title="Create Lesson" Height="300" Width="216.077" Background="#FF2D2D30">
    <Grid>
        <Label Content="Caption" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="68" Background="{x:Null}" Foreground="White"/>
        <TextBox x:Name="CaptureText" Height="23" Margin="83,13,5,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="88" Click="Cancel_Click" Foreground="#FFDDDDDD" Background="#FF2D2D30" BorderBrush="#FF1D1D1D"/>
        <Button x:Name="Clear" Content="Create" HorizontalAlignment="Left" Margin="103,239,0,0" VerticalAlignment="Top" Width="95" Click="Clear_Click" BorderBrush="#FF1D1D1D" Foreground="#FFECECEC" Background="#FF2D2D30"/>
        <ComboBox x:Name="TabSelect" Margin="10,41,5,0" VerticalAlignment="Top" SelectionChanged="TabSelect_SelectionChanged"/>
        <Grid x:Name="PlaceChosse" Margin="10,68,10,35" Background="#FF686868" ShowGridLines="True"/>

    </Grid>
</Window>
