<Window x:Name="AboutWindow" x:Class="Project_ITAD.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_ITAD"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300" ResizeMode="NoResize">
    <Grid Background="#FF686868">
        <RichTextBox Margin="0" Background="#FF2D2D30" Foreground="#FFFDFDFE" SelectionBrush="{x:Null}" FontFamily="Century">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Program create by Dmytro Lamashevskyi
                         In this version of program you can add days, and events.
                         Program was created for IT Academic Day 2018" FontSize="24"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
